<h1><%= @restaurant.name %></h1>
<%= @restaurant.address %>
<%= @restaurant.phone_number %>
<%= @restaurant.category %>
<%= link_to "Edit this restaurant", edit_restaurant_path %> <br>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<%= link_to "Remove a review", new_restaurant_review_path(@restaurant),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %> <br>
<%= link_to "Back to list", restaurants_path %>
